<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:padding="30dip">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/txt_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preview..." android:textColor="#ffffff" android:textSize="20sp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send to..." android:layout_gravity="center_horizontal" android:textSize="18sp" android:textStyle="bold" android:paddingLeft="50dip" android:paddingRight="50dip"/>

</LinearLayout>